<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        android:backgroundTint="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="13dp"
                    android:background="#333535"
                    android:src="@drawable/propic"
                    app:shapeAppearanceOverlay="@style/circular" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="13dp">

                    <TextView
                        android:id="@+id/Nameh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="0dp"
                        android:fontFamily="@font/actor"
                        android:text="Name"
                        android:textColor="#373737"
                        android:textSize="27sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Jobh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Job"
                        android:textColor="#6E6E6E"
                        android:textSize="17sp" />


                    <LinearLayout
                        android:layout_marginTop="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/MonthlyPaytxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Salary: "
                            android:textSize="16sp"
                            android:textColor="#676767"
                            />
                        <TextView
                            android:id="@+id/MonthlyPay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment"
                            android:textSize="16sp"
                            android:textColor="#676767"
                            android:textStyle="bold"
                            android:layout_marginRight="10dp"
                            />
                    </LinearLayout>
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/Contacttxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact: "
                            android:textSize="16sp"
                            android:textColor="#676767"
                            />
                        <TextView
                            android:id="@+id/Contact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact "
                            android:textSize="16sp"
                            android:textColor="#676767"
                            android:textStyle="bold"
                            /></LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/Paymenttxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment: "
                            android:textSize="16sp"
                            android:textColor="#676767"
                            />
                        <TextView
                            android:id="@+id/salaryhome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-- "
                            android:textSize="18sp"
                            android:textColor="#676767"
                            android:textStyle="bold"
                            />

                        <Button
                            android:id="@+id/paidbtn"
                            android:layout_width="58dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="7dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/rounded_corner"
                            android:backgroundTint="@drawable/background_paid"
                            android:clickable="true"
                            android:text="paid"
                            android:textColor="@drawable/button_text_color_g"
                            android:textSize="12sp" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">


                <Button
                    android:id="@+id/attendancehistoryBtn"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner"
                     android:textSize="12sp"
                    android:backgroundTint="@drawable/background_present"
                    android:textColor="@drawable/button_text_color_g"
                    android:clickable="true"
                    android:text="Attendance  history"
                    android:layout_marginBottom="10dp"
                    />
                <Button
                    android:id="@+id/PaymentBtn"
                    android:layout_width="170dp"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner_g"
                    android:backgroundTint="@drawable/background_present"
                    android:textColor="@drawable/button_text_color_g"
                    android:clickable="true"
                    android:layout_marginLeft="15dp"
                    android:text="Payment history"
                    android:layout_marginBottom="10dp"
                   />


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>